                <li><a href="/creditosEmp">Creditos</a></li>
                <li><a href="cerrar">Salir</a></li>
            </ul>
        </nav>
    </header>
    <main class="container" id="inicio">
            <article class="tabla">
                <h1>Creditos</h1>
                <table class="tablaActEli tablaActEli__w100">
                    <thead>
                        <tr>
                            <th>codigo</th>
                            <th>documento</th>
                            <th>linea</th>
                            <th>Monto</th>
                            <th>Fh Apro</th>
                            <th>Plazo</th>
                            <th>Actualizar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        datosCre.forEach(datos=>{
                        %>
                        <tr>
                            <td>
                                <input type="text" class="cod" name="cod" value="<%=datos.codigocredito%>">
                            </td>
                            <td>
                                <input type="text" class="doc" name="doc" value=" <%=datos.doccli%>">
                            </td>
                            <td>
                                <input type="text" class="codL" name="codL" value="<%=datos.codigolinea%>">                             
                            </td>
                            <td>
                                <input type="text" class="mon" name="mon" value="<%=datos.montotoprestado%>">                 
                            </td>
                            <td>
                                <input type="date" class="fecha" name="fecha" value="<%=datos.fechaaproba%>">                               
                            </td>
                            <td>
                                <input type="text" class="plazo" name="plazo" value="<%=datos.plazo%>">
                            </td>
                            <td>
                                <input type="submit" class="btnActCre btnA" value="Actualiza">
                            </td>
                            <td>
                                <input type="submit" class="btnEliCre btnE" value="Eliminar">
                            </td>
                        </tr>
                        <%
                    });
                        %>
                    </tbody>
                </table>
            </article>
    </main>
    <footer class="footer">
        <div class="derechos">
            <p class="name__footer">Â© 2021 Sanco. Todos los derechos reservados. Sanco es una marca registrada.</p>
        </div>
        <p>Usuario <%=rol%></p>
    </footer>
</body>
