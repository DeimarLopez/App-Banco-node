    <script src="./js/bundle.min.js"></script>
    <link rel="stylesheet" href="/css/app.css">
    <title>Cliente</title>
</head>
<body>
    <header class="header">
        <div class="header__logo">
            <a href="/">
                <div class="logo__header">
                </div>
            </a>
        </div>
        <nav>
            <ul>
                <li><a href="/cuentaEmple">Crear Cuentas</a></li>
                <li><a href="/asigCredEmple">Asig Credito</a></li>
                <li><a href="/lineasEmp">Lineas Credito</a></li>
                <li><a href="/datosEmpCli">Reg Cliente</a></li>
                <li><a href="/clientesEmp">Cliente</a></li>
                <li><a href="/creditosEmp">Creditos</a></li>
                <li><a href="cerrar">Salir</a></li>
            </ul>
        </nav>
    </header>
    <main class="container" id="inicio">
            <article class="tabla">
                <h1>Clientes</h1>
                <table class="tablaActEli tablaActEli__w100">
                    <thead>
                        <tr>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Correo</th>
                            <th>Celular</th>
                            <th>Sexo</th>
                            <th>fh Naci</th>
                            <th>Actualizar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        datosCli.forEach(datos=>{
                        %>
                        <tr>
                            <td>
                                <input type="text" class="doc" value="<%=datos.doccli%>">
                            </td>
                            <td>
                                <input type="text" class="nom" value="<%=datos.nomcli%>">
                            </td>
                            <td>
                                <input type="text" class="ape" value="<%=datos.apecli%>">
                            </td>
                            <td>
                                <input type="text" class="email" value="<%=datos.correocli%>">
                            </td>
                            <td>
                                <input type="text" class="cel" value="<%=datos.celularcli%>">
                            </td>
                            <td>
                                <input type="text" class="genero" value="<%=datos.sexo%>">
                            </td>
                            <td>
                                <input type="date" class="fecha" value="<%=datos.fechanacicli%>">
                            </td>
                            <td>
                                <input type="submit" class="btnActCli btnA" value="Actualiza">
                            </td>
                            <td>
                                <input type="submit" class="btnEliCli btnE" value="Eliminar">
                            </td>
                        </tr>
                        <%
                    });
                        %>
                    </tbody>
                </table>
            </article>
    </main>
    <footer class="footer">
        <div class="derechos">
            <p class="name__footer">Â© 2021 Sanco. Todos los derechos reservados. Sanco es una marca registrada.</p>
        </div>
        <p>Usuario <%=rol%></p>
    </footer>
</body>
</html>
